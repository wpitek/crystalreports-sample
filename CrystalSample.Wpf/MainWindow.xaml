<Window x:Class="CrystalSample.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CrystalExample" Height="350" Width="525">
    <StackPanel>
        <Button x:Name="HelloWorldButton" Content="Hello world" Click="HelloWorldButton_Click" />
        <StackPanel Orientation="Horizontal">
            <Button x:Name="HelloYoudButton" Content="Hello You" Click="HelloYoudButton_Click" />
            <TextBox x:Name="MyName" Text="Please enter you Name!"/>
        </StackPanel>
    </StackPanel>
</Window>
